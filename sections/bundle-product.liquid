
{% style %}
    .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
      padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }
  
    @media only screen and (min-width: 750px) {
      .padding-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
     }
     .custom-bundle{
      display:flex;
      justify-content:center;
      align-items:center;
     }
     .bundle-products-container{
      border: 1px solid #d03c3f;
      padding: 30px;
      box-sizing:border-box;
      width: 80%;
     }
     .custom-bundle_add-icon{
      display:flex;
      flex-direction:column;
      justify-content:center;
      align-items:center;
     }
  {% endstyle %}
  
<div class=" padding-{{ section.id }}">
    <div class="page-width">
      <div class="bundle-products-container">
        <h2>{{section.settings.section_title}}</h2>
        <div class="grid grid--2-col grid--3-col-tablet grid--4-col-desktop ">
          {% for product in product.metafields.custom.product_bundle.value %}
            <div class="grid__item">
              {% render 'eachproduct-card', product: product, section_id: section.id%}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
</div>
 
  
  
  {% schema %}
  {
    "name": "Custom Bundle",
    "tag" : "section",
    "settings": [
      {
      "type":"text",
      "id":"section_title",
      "label":"Section Heading"
      },
      {
        "type": "header",
        "content": "Adjust Section padding"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Custom Bundle"
      }
    ]
  }
  {% endschema %}