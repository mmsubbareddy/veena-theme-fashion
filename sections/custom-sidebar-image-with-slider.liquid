

<div class="new-arrivals padding-{{ section.id }}">
    <div class="page-width">
        {% if section.settings.section_title != blank %}
            <h2 class="new-arrivals__title">{{ section.settings.section_title }}</h2>
        {% endif %}
        <div class="new-arrivals__image-with-slider-container">

            <div class="new-arrivals__image-container">
                {% if section.settings.desktop_image != blank or section.settings.mobile_image != blank %}
                {% render 'responsive-picture', desktopImage:section.settings.desktop_image, mobileImage:section.settings.mobile_image %}
                {% else %}
                {{ "collection-1" | placeholder_svg_tag }}
                {% endif %}
            </div>

            <div class="new-arrivals__slider-container">
                slider details
            </div>


        </div>

    </div>

</div>







{% schema %}
    {
        "name":"Image with slider",
        "tag":"section",
        "settings":[
            {
                "type":"text",
                "id":"section_title",
                "label":"Section Title",
                "default":"New Arrivals"
            },
            {
                "type":"header",
                "content":"Select products"
            },
            {
                "type": "product_list",
                "id": "product_list",
                "label": "Products",
                "limit": 12
            },
            
            {
                "type":"header",
                "content":"Sidebar Image Details"
            },
            {
                "type":"image_picker",
                "id":"desktop_image",
                "label":"Image(Desktop)"
            },
            {
                "type":"image_picker",
                "id":"mobile_image",
                "label":"Image(Mobile)"
            },
            {
                "type":"text",
                "id":"pre_text",
                "label":"Pre Text",
                "default":"Women's Apparel"
            },
            {
                "type":"richtext",
                "id":"side_image_heading",
                "label":"Image heading",
                "default":"<p>exclusive Best & New Arrivals collection</p>"
            },
            {   
                "type":"text",
                "id":"button_text",
                "label":"Button Text",
                "default":"Explore"
            },
            {
                "type":"url",
                "id":"button_link",
                "label":"Button link"
            },
            
            {
            "type":"header",
            "content":"Section padding"
            },
              {
                "type": "range",
                "id": "padding_top",
                "min": 1,
                "max": 100,
                "step": 1,
                "unit": "px",
                "label": "Padding Top",
                "default": 16
              },
              {
                "type": "range",
                "id": "padding_bottom",
                "min": 1,
                "max": 100,
                "step": 1,
                "unit": "px",
                "label": "Padding Bottom",
                "default": 16
              }
              
        ],
        "presets":[
            {
                "name":"Image with slider"
            }
        ]
    }

{% endschema %}