
{{ 'section-image-banner-section.css' | asset_url | stylesheet_tag }}

<script src="{{"custom-splide-corousel.js" | asset_url}}" defer></script>


{% style %}
  
    .padding-{{ section.id }} {
        padding-top:{{section.settings.padding_top}}px;
        padding-bottom:{{section.settings.padding_bottom}}px;

    }
  {%  for block in section.blocks %}
      .image-banner__splider-content-{{ block.id }}{
          position:absolute;
          width:100%;
          height:100%;
          top:0px;
          left:0px;
          display:flex;
          flex-direction:column;
      }
      .image-banner__slider-content-container-{{block.id}}{
          min-width:450px;
          max-width:545px;
          padding:20px 35px;
          margin:20px;
          text-align:{{block.settings.text_position}};

      }

  {% endfor %}
{% endstyle %}
{% capture  options %}
    {
        "autoplay": {{ section.settings.enable_autoplay }},
        "pagination": {{ section.settings.enable_dots }},
        "arrows": {{ section.settings.enable_arrows }},
        "type": "{{ section.settings.slide_animation }}",
        "rewind":{{ section.settings.rewind_slides }}
    }
{% endcapture %}



<div class="image-banner padding-{{ section.id }}">
  <div class="page-width">
    <custom-splide-corousel class="image-banner__slider-container" data-options='{{ options }}'>
      <section class="splide" aria-label="Splide Basic HTML Example">
        <div class="splide__track">
          <ul class="splide__list">
            {% for block in section.blocks %}
              {% if section.blocks.size > 0 %}
                <li class="splide__slide">
                {% if block.settings.desktop_image !=blank %}
                    
                    {% render 'responsive-picture',
                        desktopImage: block.settings.desktop_image,
                        mobileImage: block.settings.mobile_image
                    %}
              
                    {% else %}
                    {{ 'hero-apparel-1' | placeholder_svg_tag }}

                {% endif %}
                  <div class="image-banner__splider-content-{{ block.id }} {{ block.settings.content_position }}">
                    <div class="image-banner__slider-content-container-{{ block.id }}">
                    {%  if block.settings.list_content != blank %}
                      <ul class="image-banner__under-order-list">
                        <li>{{ block.settings.list_content }}</li>
                      </ul>
                    {% endif %}
                      {% if block.settings.heading_content != blank  %}
                        <h2 class="h1">{{ block.settings.heading_content }}</h2>
                      {% endif %}
                      {% if  block.settings.button_text != blank %}
                        <a
                          {% if block.settings.button_link == blank %}
                            role="link" aria-disabled="true"
                          {% else %}
                            href="{{ block.settings.button_link }}"
                          {% endif %}
                          class="button image-banner__button"
                        >
                            <span>{{ block.settings.button_text }}</span>
                        </a>
                      {% endif %}
                      
                    </div>
                  </div>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      </section>
    </custom-splide-corousel>
  </div>
</div>

{% schema %}
{
  "name": "Image banner",
  "tag": "section",
  "class": "image-banner",
  "settings": [
    {
        "type": "header",
        "content": "Enable auto scroll"
    },
    {
        "type": "checkbox",
        "id": "enable_autoplay",
        "label": "Enable Autoplay",
        "default": true
    },
    {
        "type": "header",
        "content": "Enable dots"
    },
    {
        "type": "checkbox",
        "id": "enable_dots",
        "label": "Enable dots",
        "default": true
    },
    {
        "type": "header",
        "content": "Enable rewind"
    },
    {
        "type": "checkbox",
        "id": "rewind_slides",
        "label": "Enable rewind",
        "default": true
    },

    {
        "type": "header",
        "content": "Enable arrows"
    },
    {
        "type": "checkbox",
        "id": "enable_arrows",
        "label": "Enable arrows",
        "default": true
    },
    {
        "type": "header",
        "content": "Slide animation"
    },
    {
        "type": "select",
        "id": "slide_animation",
        "label": "Slider animation",
        "options": [
          {
            "value": "fade",
            "label": "Fade"
          },
          {
            "value": "loop",
            "label": "Loop"
          },
          {
            "value": "slide",
            "label": "slide"
          }
        ],
        "default": "loop"
      },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 16
    }
  ],
  "blocks": [
    {
      "name": "Slider content",
      "type": "slider-content",
      "settings": [
        {
          "type": "header",
          "content": "Desktop image"
        },
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Image(Desktop)"
        },
        {
          "type": "header",
          "content": "Mobile image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Image(Mobile)"
        },
        { "type": "header", "content": "Preheading Text" },
        {
          "type": "text",
          "id": "list_content",
          "label": "Preheading text",
          "default": "Trendy Classics"
        },
        { "type": "header", "content": "Heading content" },
        {
          "type": "richtext",
          "id": "heading_content",
          "label": "Title content",
          "default": "<p>Discover Signature Look: Fashion Forward and Fabulous!</p>"
        },
        { "type": "header", "content": "Color schema" },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "Color Scheme",
            "default": "scheme_1"
          },
        { "type": "header", "content": "Button details" },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Explore Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "header",
          "content": "Text position"
        },
        {
          "type": "select",
          "id": "text_position",
          "label": "Text position options",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        },
        {
          "type": "header",
          "content": "Content position options"
        },
        {
          "type": "select",
          "id": "content_position",
          "label": "Content position options",
          "options": [
            {
              "value": "justify-start align-start",
              "label": "Top left"
            },
            {
              "value": "justify-start align-center",
              "label": "Top center"
            },
            {
              "value": "justify-start align-end",
              "label": "Top right"
            },

            {
              "value": "justify-center align-start",
              "label": "Middle left"
            },
            {
              "value": "justify-center align-center",
              "label": "Middle center"
            },
            {
              "value": "justify-center align-end",
              "label": "Middle right"
            },
            {
              "value": "justify-end align-start",
              "label": "Bottom left"
            },
            {
              "value": "justify-end align-center",
              "label": "Bottom center"
            },
            {
              "value": "justify-end align-end",
              "label": "Bottom right"
            }
          ],
          "default": "justify-center align-center"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image banner"
    }
  ]
}
{% endschema %}
